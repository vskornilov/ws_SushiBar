@model IEnumerable<ws_SushiBar.ViewModels.Product>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card-deck col-sx p-2">
            <div class="card" style="width: 18rem;">
                <!-- Шапка карточки -->
                <div class="card-header">
                    <h5 class="card-title text-center font-weight-bold">@item.Name</h5>
                </div>
                <!-- Шапка карточки -->
                <!-- Тело карточки -->
                <div class="card-body">
                    <img class="card-img-top" src="@item.Img" alt="@item.Name"><hr />
                    <p class="card-text">@item.Description</p>
                </div>
                <!-- Тело карточки -->
                <!-- Подвал карточки -->
                <div class="card-footer">
                    <p class="text-font-small font-weight-bold">Цена: @item.Price.ToString("c") </p>
                </div>
                <!-- Подвал карточки -->
            </div>
        </div>
    }
</div>